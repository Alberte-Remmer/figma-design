---
//@ts-nocheck
import servicesData from "@data/services.json";
import PrimaryButton from "@components/ui/PrimaryButton.astro";
console.log(servicesData);
---

<ul>
  {
    servicesData.services.map((service) => (
      <li>
        <h3>{service.title}</h3>
        <p>{service.description}</p>
        <PrimaryButton url="#0" text={service.buttonText} variant="dark" />
      </li>
    ))
  }
</ul>

<style>
  @layer components {
    ul {
      display: grid;
      gap: 1rem;
      z-index: 2;

      li {
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 46px;
        gap: var(--space-2xs);
        border-radius: 20px;
        /* flex: 1 0 0; */
        border: 1px solid rgba(255, 255, 255, 0.2);
        background: rgba(38, 38, 38, 0.9);
        backdrop-filter: blur(16px);
      }
    }
    @media (width > 768px) {
      ul {
        display: flex; /* mine li bliver sat i en r√¶kke ved siden af hinanden */
        grid-column: content;
        grid-row: 2/4;
      }
    }
  }
</style>
