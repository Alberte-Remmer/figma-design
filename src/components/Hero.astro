---
import { Image } from "astro:assets";
import Services from "./Services.astro";
import CEOImage from "@assets/images/ceo.png";
---

<section class="hero">
  <div class="hero-content">
    <h1>Empowering Your Business Growth</h1>
    <p>Discover tailored strategies and expert insights to take your business to the next level. Let us help you navigate challenges and achieve sustainable success.</p>
    <a href="#0">Book a Meeting</a>
  </div>
  <Image src={CEOImage} alt="CEO" />

  <Services />
</section>

<style>
  /* Styles her */
  @layer components {
    .hero {
      /* display og layout */
      display: grid;
      grid-column: full;
      grid-template-columns: subgrid;

      /* Box model */

      /* Visual */
      background-color: var(--color-secondary);
      position: relative; /* Nødvendigt for pseudo-element */

      /* Hvid baggrund for row 3-4 */
      &::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        grid-row: 3 / 5; /* Row 3-4 */
        grid-column: full; /* Hele bredden */
        background: white;
        z-index: 1; /* Bag alt indhold */
        pointer-events: none; /* Ingen interaction */
      }

      img {
        grid-row: 1/3;
        grid-column: hero;
        place-self: stretch;
        object-fit: cover;
      }

      ul {
        grid-column: content;
        grid-row: 2/4;
        display: flex;
        gap: 1rem;
      }

      .hero-content {
        /* display og layout */
        grid-column: content-start/ hero-start;
        grid-row: 1;

        /* Box model */
        padding-block: 5rem;
        margin-right: 60px;

        /* Typography & Content */
        color: var(--color-primary);

        a {
          /* display og layout */
          display: inline-flex;

          /* Box model */
          /* Responsiv padding: top/bottom (12px→16px) left/right (24px→31px) */
          padding: clamp(12px, 0.75rem + 0.5vi, 16px) clamp(24px, 1.5rem + 1vi, 31px) !important;

          /* Typography */
          text-decoration: none;
          color: var(--color-secondary);

          /* Visual & content */
          border-radius: 42px;
          border: 1px solid #ebebeb;
          background: var(--color-primary);
        }
      }
      h1,
      p {
        margin-bottom: clamp(0.5rem, 2vw, 1rem);
      }

      @media (width < 768px) {
        grid-template-columns: 1fr;
        justify-items: center;

        .hero-content {
          gap: 15px;
          h1 {
            text-align: left;
          }
          p {
            text-align: left; /* Tekst forbliver venstrejusteret */
          }
          a {
            align-self: center;
          }
        }

        > *:nth-child(2) {
          /* Vælger nr. 2 barn (img) af .hero og skjuler det */
          display: none;
        }
      }
    }
  }
</style>
