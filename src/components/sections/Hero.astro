---
import { Image } from "astro:assets";
import Services from "@components/content/Services.astro";
import CEOImage from "@assets/images/ceo.png";
import Section from "@layouts/Section.astro";
import PrimaryButton from "@components/ui/PrimaryButton.astro";
---

<Section data-theme="dark">
  <div class="flow">
    <h1>Empowering Your Business Growth</h1>
    <p>Discover tailored strategies and expert insights to take your business to the next level. Let us help you navigate challenges and achieve sustainable success.</p>
    <PrimaryButton url="#0" text="Book a Meeting" variant="light" />
  </div>
  <Image src={CEOImage} alt="CEO" />
  <Services />
</Section>

<style>
  /* Styles her */
  @layer components {
    section {
      display: grid;
      position: relative;

      img {
        grid-row: 1/3;
        grid-column: hero;
        place-self: stretch;
        object-fit: cover;
      }

      &::after {
        content: "";
        position: absolute;
        top: 0; /* Placere elementet så det fylder hele bredden (top, left, right og bottom)*/
        left: 0;
        right: 0;
        bottom: 0;
        grid-row: 3 / 5; /* Row 3-4 */
        background: white;
        z-index: 1; /* Bag alt indhold */
        pointer-events: none; /* Ingen interaction */
      }

      @media (width > 768px) {
        div {
          grid-column: content-start/ hero-start;
          grid-row: 1;
          padding-block: 5rem;
          margin-right: 60px;
        }
      }
      @media (width < 768px) {
        > *:nth-child(2) {
          /* Vælger nr. 2 barn (img) af .hero og skjuler det */
          display: none;
        }
      }
    }
  }
</style>
